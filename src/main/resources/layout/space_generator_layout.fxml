<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" minWidth="300.0" prefHeight="125.0" prefWidth="300.0" spacing="10.0"
      xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.dudududi.grainexpansion.controller.SpaceGeneratorController">
    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
        <Label text="Width:"/>
        <TextField fx:id="boardWidth" prefHeight="30.0" prefWidth="150.0"/>
    </HBox>
    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="6.0">
        <Label text="Height:"/>
        <TextField fx:id="boardHeight" prefHeight="30.0" prefWidth="150.0"/>
    </HBox>
    <CheckBox fx:id="periodicBC" mnemonicParsing="false" text="Periodic boundary condition"/>
    <Button fx:id="generateButton" mnemonicParsing="false" prefHeight="30.0" prefWidth="250.0" text="Generate mesh"/>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</VBox>
