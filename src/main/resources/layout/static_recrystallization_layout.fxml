<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" maxWidth="300.0" prefHeight="23.0" prefWidth="300.0" spacing="10.0"
      xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.dudududi.grainexpansion.controller.StaticRecrystallizationController">
    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
        <Label text="Nucleation type:"/>
        <ComboBox fx:id="selectNucleationType" prefHeight="30.0" prefWidth="150.0"/>
    </HBox>
    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
        <Label text="Nucleons amount:"/>
        <TextField fx:id="nucleonsAmountField" prefHeight="30.0" prefWidth="150.0"/>
    </HBox>
    <CheckBox fx:id="onBoundaryCheckBox" mnemonicParsing="false" text="Nucleation only on boundaries"/>
    <ToggleButton fx:id="startSRXMC" mnemonicParsing="false" prefHeight="18.0" prefWidth="250" text="Start recrystallization"/>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</VBox>